{
    "description": "Allows any website to be installed as a PWA",
    "manifest_version": 2,
    "name": "PWAizer",
    "version": "0.1",
    "permissions": ["<all_urls>"],

    "browser_action": {
        "default_icon": "/PWAS3-transparent.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["checker.js"]
    }]
}